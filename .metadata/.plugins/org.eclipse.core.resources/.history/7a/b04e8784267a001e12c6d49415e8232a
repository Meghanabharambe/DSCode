package graphProg;

public class GraphAMain {

	public static void main(String[] args) {
		GraphAM g = new GraphAM(5);
		
		//g.acceptGraph();
		//g.display();
		System.out.println("Undirected graph....");
	    g.addEdge(0, 1);
		g.addEdge(0, 4);
		g.addEdge(1, 2);
		g.addEdge(2, 3);
		g.addEdge(3, 4);
		
		g.display();
		
		System.out.println("Directed graph....");
		DireGraphAM dg = new DireGraphAM(7);
		dg.addEdge(0, 1);
		dg.addEdge(0, 2);
		dg.addEdge(0, 3);
		dg.addEdge(0, 4);
		dg.addEdge(1, 5);
		dg.addEdge(2, 5);
		dg.addEdge(3, 6);
		dg.addEdge(4, 6);
		dg.addEdge(5, 6);
		
		dg.display();
	}
}
