package graphProg;

public class DireGraphAM {
      int ver;
      int matrix[][];
      
	public DireGraphAM(int size) {
		super();
		this.ver = ver;
		this.matrix = new int[size][size];
	}
	
	public void addEdge(int i, int j) {
		matrix[i][j] = 1;
	}
	
	public void display() {
		for(int i = 0; i<ver; i++) {
			for(int j = 0; j<ver; j++) {
				System.out.print(matrix[i][j]+" ");
			}
			System.out.println();
		}
	}
}
